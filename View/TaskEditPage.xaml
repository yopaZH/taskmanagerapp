<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagerApp.View.TaskEditPage"
             Title="Редактирование задачи">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Title -->
            <Label Text="Название задачи" FontAttributes="Bold" FontSize="14"/>
            <Entry Text="{Binding TaskTitle}"
                   Placeholder="Введите название"
                   FontSize="14"
                   Padding="10"/>

            <!-- Description -->
            <Label Text="Описание" FontAttributes="Bold" FontSize="14"/>
            <Editor Text="{Binding Description}"
                    Placeholder="Введите описание"
                    FontSize="14"
                    HeightRequest="120"/>

            <!-- Status -->
            <Label Text="Статус" FontAttributes="Bold" FontSize="14"/>
            <Picker ItemsSource="{Binding StatusOptions}"
                    SelectedItem="{Binding SelectedStatus}"
                    FontSize="14"/>

            <!-- Priority -->
            <Label Text="Приоритет" FontAttributes="Bold" FontSize="14"/>
            <Picker ItemsSource="{Binding PriorityOptions}"
                    SelectedItem="{Binding SelectedPriority}"
                    FontSize="14"/>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Text="Сохранить"
                        Command="{Binding SaveCommand}"
                        Grid.Column="0"
                        Padding="20"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="8"/>

                <Button Text="Отмена"
                        Command="{Binding CancelCommand}"
                        Grid.Column="1"
                        Padding="20"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="#FF5252"
                        TextColor="White"
                        CornerRadius="8"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
