<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskManagerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskManagerApp.View">

    <ShellContent 
        Title="Главная"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPageRoute"/>

    <ShellContent Title="Проекты" 
                  ContentTemplate="{DataTemplate local:ProjectsPage}"
                  Route="ProjectsPageRoute"/>

    <ShellContent Title="Задачи проекта"
                  ContentTemplate="{DataTemplate local:ProjectTasksPage}"
                  Route="ProjectTasksPageRoute"/>

    <ShellContent Title="Редактирование задачи"
                  ContentTemplate="{DataTemplate local:TaskEditPage}"
                  Route="TaskEditPageRoute"/>

</Shell>
